<%=  form_tag(posts_edit_path, method: "patch") do %>
    <div class="post-field">	#method: :patch
        <%= label_tag("Title: ") %> <br/>
        <%= text_field_tag("title") %>
    </div>

    <div class="post-field">
        <%= label_tag("Content: ") %> <br/>
        <%= text_area_tag("content") %>
    </div>

    <%= button_tag("Edit Post!") %>
<% end %>